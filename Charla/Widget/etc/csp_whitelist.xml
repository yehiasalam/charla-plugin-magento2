<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="charla-script" type="host">https://app.getcharla.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="charla-connect" type="host">https://app.getcharla.com</value>
                <value id="charla-connect-wss" type="host">wss://app.getcharla.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="charla-imgs" type="host">https://app.getcharla.com</value>
            </values>
        </policy>
        <policy id="media-src">
            <values>
                <value id="charla-media" type="host">https://app.getcharla.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
